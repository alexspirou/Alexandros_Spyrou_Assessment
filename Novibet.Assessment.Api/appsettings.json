{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "BackgroundWorkerSettings": {
    "Enabled": false
  },

  "HangfireOptions": {
    "DashboardIsEnabled": true,
    "DashboardPath": "/hangfire",
    "JobStorageMode": "InMemory",
    "ServerName": "NovibetAssessmentHangfire"
  },

  "CurrencyRatesJob": {
    "Enabled": false,
    "Cron": "* * * * * *"
  }
}
