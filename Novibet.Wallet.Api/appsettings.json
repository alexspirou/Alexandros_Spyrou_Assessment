{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "BackgroundWorkerSettings": {
    "Enabled": true
  },

  "HangfireOptions": {
    "DashboardIsEnabled": true,
    "DashboardPath": "/hangfire",
    "JobStorageMode": "InMemory",
    "ServerName": "NovibetWalletHangfire"
  },

  "CurrencyRatesJob": {
    "Enabled": true,
    //"Cron": "* * * * * *",
    "Cron": "0 * * * *"

  },

  "AvailableCurrenciesForCacheJob": {
    "Enabled": true

  }
}
